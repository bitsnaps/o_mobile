<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/ll_product_colors"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/default_16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="25dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="wrap_content"
            android:text="Label color"
            android:textColor="#000"
            />
        <ImageButton
            android:id="@+id/ib_color_close"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_grey"
            android:background="@color/transparent"

            />
    </LinearLayout>
    <GridLayout
        android:id="@+id/gc_colors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3">
        <Button
            android:id="@+id/btnPaymentType0"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:background="#EEAC06"/>
        <Button
            android:id="@+id/btnPaymentType1"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:background="#E0510C"/>
        <Button
            android:id="@+id/btnPaymentType2"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:background="#F30707"/>
        <Button
            android:id="@+id/btnPaymentType3"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:background="#704FAD"/>
        <Button
            android:id="@+id/btnPaymentType4"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:background="#1B6597"/>
        <Button
            android:id="@+id/btnPaymentType5"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:background="#042C36" />
        <Button
            android:id="@+id/btnPaymentType6"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:background="#464549"/>
        <Button
            android:id="@+id/btnPaymentType7"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:background="#020A0F"/>
        <Button
            android:id="@+id/btnPaymentType8"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:background="#F23FE610"/>
    </GridLayout>

</LinearLayout>
