<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/ll_payment_types"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2"
        android:background="@color/grey_40">

        <Button
            android:id="@+id/btnPaymentType0"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_height="100dp"
            android:text="Cell 0"
            android:textSize="14sp"
            android:layout_columnWeight="1"
            android:background="#fff"
            />

        <Button
            android:id="@+id/btnPaymentType1"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_height="100dp"
            android:text="Cell 1"
            android:textSize="14dip"
            android:layout_columnWeight="1"
            android:background="#fff"/>
        <Button
            android:id="@+id/btnPaymentType2"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_height="100dp"
            android:text="Cell 2"
            android:textSize="14dip"
            android:layout_columnWeight="1"
            android:background="#fff"/>

        <Button
            android:id="@+id/btnPaymentType3"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_height="100dp"
            android:text="Cell 3"
            android:textSize="14dip"
            android:layout_columnWeight="1"
            android:background="#fff"/>

        <Button
            android:id="@+id/btnPaymentType4"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_height="100dp"
            android:text="Cell 4"
            android:textSize="14dip"
            android:layout_columnWeight="1"
            android:background="#fff"/>

        <Button
            android:id="@+id/btnPaymentType5"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_height="100dp"
            android:text="Cell 5"
            android:textSize="14dip"
            android:layout_columnWeight="1"
            android:background="#fff" />
    </GridLayout>

</LinearLayout>
