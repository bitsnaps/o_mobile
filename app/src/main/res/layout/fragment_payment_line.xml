<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rel"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_transparency">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/ll_payment_line_controls"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:text="AMOUNT RECEIVED"
            android:textColor="#000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/tv_payment_line_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text=""
                android:textSize="100px"
                android:textColor="#585757"/>
            <EditText
                android:id="@+id/et_payment_line_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="200px"
                android:text="100"
                android:layout_gravity="center_horizontal"
                android:textColor="#585757"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/et_payment_line_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance: "
            android:textColor="#000"
            android:layout_marginTop="6dp"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        >
        <TextView
            android:id="@+id/et_payment_line_real_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible"
            />
    <LinearLayout
        android:id="@+id/et_payment_line_digits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="0dp"
            android:padding="0dp"
            >

            <Button
                android:id="@+id/btnPaymentType1"
                android:layout_height="60dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="1"
                android:textSize="14sp"
                android:background="@null"
                />

            <Button
                android:id="@+id/btnPaymentType2"
                android:layout_height="60dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="2"
                android:textSize="18dip"
                android:layout_columnWeight="1"
                android:background="@null"/>
            <Button
                android:id="@+id/btnPaymentType3"
                android:layout_height="60dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="3"
                android:textSize="18dip"
                android:layout_columnWeight="1"
                android:background="@null"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#979595" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btnPaymentType4"
                android:layout_height="60dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="4"
                android:textSize="14sp"
                android:layout_columnWeight="1"
                android:background="@null"
                />

            <Button
                android:id="@+id/btnPaymentType5"
                android:layout_height="60dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="5"
                android:textSize="18dip"
                android:layout_columnWeight="1"
                android:background="@null"/>
            <Button
                android:id="@+id/btnPaymentType6"
                android:layout_height="60dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="6"
                android:textSize="18dip"
                android:layout_columnWeight="1"
                android:background="@null"/>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#979595" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btnPaymentType7"
                android:layout_height="60dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="7"
                android:textSize="14sp"
                android:layout_columnWeight="1"
                android:background="@null"

                />

            <Button
                android:id="@+id/btnPaymentType8"
                android:layout_height="60dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="8"
                android:textSize="18dip"
                android:layout_columnWeight="1"
                android:background="@null"/>
            <Button
                android:id="@+id/btnPaymentType9"
                android:layout_height="60dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="9"
                android:textSize="18dip"
                android:layout_columnWeight="1"
                android:background="@null"/>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#979595" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btnPaymentType"
                android:layout_height="60dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text=""
                android:textSize="14sp"
                android:layout_columnWeight="1"

                />

            <Button
                android:id="@+id/btnPaymentType0"
                android:layout_height="60dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="0"
                android:textSize="18dip"
                android:layout_columnWeight="1"
                android:background="@null"/>
            <Button
                android:id="@+id/btnPaymentTypeClear"
                android:layout_height="60dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="C"
                android:textSize="18dip"
                android:layout_columnWeight="1"
                android:background="@null"/>

        </LinearLayout>



    </LinearLayout>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:text="Charge 100"
        android:textSize="18dip"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:background="@drawable/bt_rounded_primary"
        android:layout_marginTop="@dimen/default_6dp"
        android:layout_marginLeft="@dimen/default_6dp"
        android:layout_marginRight="@dimen/default_6dp"
        />
    </LinearLayout>
    </LinearLayout>

</RelativeLayout>